<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/green_soft_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tituloTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_oportunidad"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_oportunidad"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_dark"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descripcion"
            android:minLines="4"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_dark"
            android:layout_marginBottom="24dp" />

        <!-- Switch para marcar como privada usando SwitchCompat -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchPrivada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opcion_privada"
            android:textColor="@color/black"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publicar"
            android:textSize="18sp"
            android:backgroundTint="@color/green_primary"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>