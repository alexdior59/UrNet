<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@usuario"
            android:textColor="#888"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnChatear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicar y chatear"
            android:backgroundTint="@color/green_primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
