<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetalleTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary" />

        <TextView
            android:id="@+id/tvDetalleUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@usuario"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDetalleTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pública"
            android:textColor="@color/green_light"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvDetalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto largo de descripción"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvInteresados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 interesados aún"
            android:textStyle="italic"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>